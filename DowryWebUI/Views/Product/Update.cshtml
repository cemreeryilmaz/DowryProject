@model ProductUpdateViewModel
@{
    ViewBag.Title = "Title";
    Layout = "_AdminLayout";
}

<!-- Main content -->
<div class="content">
    <form asp-controller="Product" asp-action="Update" method="post" style="margin-bottom: 10px;margin-top:10px;" enctype="multipart/form-data">
        <div class="col-md-10">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Ürün Güncelle</h3>

                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Product.ProductName">Ürün Adı</label>
                        <input type="text" asp-for="Product.ProductName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.UnitPrice">Fiyat</label>
                        <input type="text" asp-for="Product.UnitPrice" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ImageUrl" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="Product.ImageUrl" />
                            <img src="~/img/@Model.Product.ImageUrl" width="100" />
                            <input type="file" name="file" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CategoryId">Kategori</label>
                        <select asp-for="Product.CategoryId" class="form-control custom-select" asp-items="@(new SelectList(Model.Categories.Data,"CategoryId","CategoryName"))"></select>
                    </div>
                    <input type="hidden" asp-for="Product.ProductId" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

        <div class="row">
            <div class="col-10">
                <input type="submit" value="Güncelle" class="btn btn-success btn-block">
            </div>
        </div>

    </form>
</div>

<!-- /.content -->
@section summernote{
    <script src="~/admintemplate/plugins/summernote/summernote-bs4.min.js"></script>
}