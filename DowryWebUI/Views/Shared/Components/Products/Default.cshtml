@foreach (var product in Model.Products.Data)
{
    <div class="col-sm-6 col-md-4 col-lg-3">

        <div class="box">

            <a href="">
                <div class="img-box">
                    <img src="~/img/@product.ImageUrl" alt="">
                </div>
                <div class="detail-box">
                    <h6>
                        @product.ProductName
                    </h6>
                    <h6>
                        Fiyat
                        <span>
                            @product.UnitPrice <i class="fa fa-lira-sign"> </i>
                        </span>
                    </h6>
                </div>
                <div class="new">
                    <span>
                        New
                    </span>
                </div>
            </a>

        </div>


    </div>
}